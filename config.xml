        <icon src="res/icon/android/icon-48-mdpi.png" qualifier="mdpi" density="mdpi"/>
        <icon src="res/icon/android/icon-72-hdpi.png" qualifier="hdpi" density="hdpi"/>
        <icon src="res/icon/android/icon-96-xhdpi.png" qualifier="xhdpi" density="xhdpi"/>
        <icon src="res/icon/android/icon-144-xxhdpi.png" qualifier="xxhdpi" density="xxhdpi"/>
        <icon src="res/icon/android/icon-192-xxxhdpi.png" qualifier="xxxhdpi" density="xxxhdpi"/>

        <splash src="res/screen/android/screen-ldpi-portrait.png" qualifier="port-ldpi"/>
